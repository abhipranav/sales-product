{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sales-product/contracts/events/sales-event.v1.schema.json",
  "title": "Sales Event Envelope V1",
  "type": "object",
  "required": [
    "eventId",
    "eventType",
    "occurredAt",
    "source",
    "workspaceSlug",
    "entity",
    "payload",
    "metadata"
  ],
  "properties": {
    "eventId": {
      "type": "string",
      "minLength": 8
    },
    "eventType": {
      "type": "string",
      "minLength": 3
    },
    "occurredAt": {
      "type": "string",
      "format": "date-time"
    },
    "source": {
      "type": "string",
      "minLength": 2
    },
    "workspaceSlug": {
      "type": "string",
      "minLength": 2
    },
    "entity": {
      "type": "object",
      "required": [
        "type",
        "id"
      ],
      "properties": {
        "type": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "externalId": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "payload": {
      "type": "object"
    },
    "metadata": {
      "type": "object",
      "required": [
        "correlationId",
        "idempotencyKey"
      ],
      "properties": {
        "correlationId": {
          "type": "string",
          "minLength": 8
        },
        "idempotencyKey": {
          "type": "string",
          "minLength": 8
        },
        "actorEmail": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
